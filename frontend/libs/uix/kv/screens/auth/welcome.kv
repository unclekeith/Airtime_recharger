<WelcomeScreen>
    md_bg_color: app.theme_cls.backgroundColor

    MDBoxLayout:
        orientation: 'vertical'


        MDBoxLayout:
            orientation: 'vertical'

            pos_hint: {"center_y": .6}
            size_hint: None,None
            size_hint_x: .99
            size_hint_y: .9
            padding: dp(0)
            

            FitImage:
                size_hint_x: None
                width: root.width
                source: "data/images/p2.png"


        MDBoxLayout:
            orientation: 'horizontal'
            size_hint_y: .3
            padding: dp(130), dp(40), dp(50),0
            spacing: dp(40)


 
            MDButton:
                on_release: root.manager.push("network_provider")
                pos_hint: {'center_x': 0.7,'top': 1}
                radius: dp(5)

                MDButtonText:
                    text: " Continue"

                MDButtonIcon:
                    icon: 'chevron-double-right'


        